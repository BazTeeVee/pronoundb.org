{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true, 
    "strictPropertyInitialization": true,
  
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "allowJs": false,

    "lib": [ "es2020.string", "es2020.bigint", "es2019.object" ],
    "baseUrl": "src",
    "paths": {
      "@components/*": [ "components/*" ],
      "@assets/*": [ "assets/*" ],
      "@constants": [ "constants.ts" ],
      "@shared": [ "../../extension/shared.ts" ]
    },

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,

    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": [ "src/**/*", "../extension/shared.ts" ]
}

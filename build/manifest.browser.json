{
  "manifest_version": 2,
  "name": "PronounDB",
  "description": "A Chrome/Firefox extension that lets people know each other's pronouns on various places of the Internet",
  "permissions": [
    "storage",
    "https://pronoundb.org/api/v1/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.discord.com/channels/*",
        "https://*.discord.com/activity",
        "https://*.discord.com/login*",
        "https://*.discord.com/app",
        "https://*.discord.com/library",
        "https://*.discord.com/store",

        "https://*.github.com/*",
        "https://*.twitch.tv/*",
        "https://*.twitter.com/*"
      ],
      "js": [ "script.js" ]
    }
  ]
}
